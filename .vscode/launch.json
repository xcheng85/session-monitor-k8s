    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch local dev setup",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "cwd": "${fileDirname}",
            "env": {
                "CONFIG_PATH": "./config.yaml",
            }
        },
        {
            "name": "Launch deployment setup",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {
                "CONFIG_PATH": "/config/config.yaml",
            }
        }
    ]
  }